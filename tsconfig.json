{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "resolveJsonModule": true,
        "removeComments": true,
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}